<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h2><%= @race.user.name%>'s Races:</h2>
<%= @race.name %> 5k race ran in <%= @race.time %> minutes in <%= @race.city.name %>, <%= @race.city.state %>.<br>
    <%= @race.food %> were served and <%= @race.clothing %> was provided.<br>

<br></br>

<a href="/races/<%= @race.id %>/edit">Edit Race</a>

<br></br>

  <form action="/races/<%= @race.id %>" method="post">
    <input type="hidden" id="hidden" name="_method" value="delete">
    <input type="submit" value="Delete Race" style="height:60px; width:100px">
  </form>
